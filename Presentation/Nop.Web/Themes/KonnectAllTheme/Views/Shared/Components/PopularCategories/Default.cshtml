@model IList<PopularCategoryModel>

@if (Model.Count > 0)
{
    <section class="popular-categ">
    <div class="container head-popular">
        <div class="head-popular-categ">
            <div class="left-section">
                <h4 class="text-black text-left">@T("shop.PopularCategories")</h4>
                <h6 class="text-black text-left">@T("shop.PopularCategories.Detail")</h6>
            </div>
            <div class="right-section">
            </div>
        </div>
    </div>

    <div class="popular-swiper container swiper">
        <div class="slide-container swiper-shop">
            <div class="card-wrapper swiper-wrapper">                
                    @foreach (var item in Model)
                    {
                        <div class="card swiper-slide">
                            <div class="thumbnail" data-categoryId="@item.CategoryId">
                                <a href="@Url.RouteUrl("Category", new { SeName = item.SeName})" title="@item.CategoryName">
                                    <div class="thumbnail__picture">
                                        <img width="175" alt="@item.CategoryName" class="prod-img" src="@item.ImageUrl">
                                    </div>
                                    <div class="product-details">
                                        <div class="name-product font-semibold text-black-light">
                                            @item.CategoryName
                                        </div>
                                        <div class="price-product font-light text-black-light">
                                            @item.ProductsCount @T("Shop.PopularCategory.Product.Count")
                                        </div>
                                    </div>
                                </a>
                            </div>
                        </div>
                    }
            </div>
        </div>
        <div class="swiper-button-next btn-shop-next swiper-navBtn"></div>
        <div class="swiper-button-prev btn-shop-prev swiper-navBtn"></div>
        <div class="swiper-pagination"></div>
    </div>
</section>    
}

