@model IList<PopularCategoryModel>

@if (Model.Count > 0)
{
    <section class="popular-categ">
        <div class="container">
            <div class="head-popular-categ">
                <div class="left-section">
                    <h4 class="text-black text-left">@T("shop.PopularCategories")</h4>
                    <h6 class="text-black text-left">@T("shop.PopularCategories.Detail")</h6>
                </div>
                <div class="right-section">
                    <div id="slide-left" class="arrow-prev"></div>
                    <div id="slide-right" class="arrow-next"></div>
                </div>
            </div>

            <div class="content-popular-categ">
                <div class="slide-container">
                    <section id="slider">
                        @foreach (var item in Model)
                        {
                            <div class="thumbnail" data-categoryId="@item.CategoryId">
                                <a href="@Url.RouteUrl("Category", new { SeName = item.SeName})" title="@item.CategoryName">
                                    <img alt="@item.CategoryName" class="prod-img" src="@item.ImageUrl">
                                    <div class="product-details">
                                        <div class="name-product font-semibold">
                                            @item.CategoryName
                                        </div>
                                        <div class="price-product font-light">
                                            @item.ProductsCount @T("Shop.PopularCategory.Product.Count")
                                        </div>
                                    </div>
                                </a>
                            </div>
                        }
                    </section>
                </div>
            </div>
        </div>
    </section>
}
