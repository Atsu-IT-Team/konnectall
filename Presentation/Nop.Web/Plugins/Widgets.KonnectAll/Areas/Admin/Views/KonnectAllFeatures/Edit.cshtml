@using Nop.Web.Areas.Admin.Components;
@model OnlineSalesModel

@{
    Layout = "_AdminLayout";
    //page title
    ViewBag.PageTitle = T("Plugin.Widgets.KonnectAll.Features.OnlineSales.EditDetails").Text;
    //active menu item (system name)
    NopHtml.SetActiveMenuItemSystemName("OnlineSales");
}
<form asp-controller="KonnectAllFeatures" asp-action="Edit" method="post" id="onlinesales-form">
    <div class="content-header clearfix">
        <h1 class="float-left">
            @T("Plugin.Widgets.KonnectAll.Features.OnlineSales.EditDetails")
            <small>
                <i class="fas fa-arrow-circle-left"></i>
                <a asp-action="List">@T("Plugin.Widgets.KonnectAll.Features.OnlineSales.BackToList")</a>
            </small>
        </h1>
        <div class="float-right">
            <button type="submit" name="save" class="btn btn-primary">
                <i class="far fa-save"></i>
                @T("Admin.Common.Save")
            </button>
            <button type="submit" name="save-continue" class="btn btn-primary">
                <i class="far fa-save"></i>
                @T("Admin.Common.SaveContinue")
            </button>
            <span id="onlinesales-delete" class="btn btn-danger">
                <i class="far fa-trash-alt"></i>
                @T("Admin.Common.Delete")
            </span>
            @await Component.InvokeAsync(typeof(AdminWidgetViewComponent), new { widgetZone = AdminWidgetZones.CategoryDetailsButtons, additionalData = Model })
        </div>
    </div>
    @await Html.PartialAsync("_CreateOrUpdate", Model)
</form>
<nop-delete-confirmation asp-model-id="@Model.Id" asp-button-id="onlinesales-delete" />