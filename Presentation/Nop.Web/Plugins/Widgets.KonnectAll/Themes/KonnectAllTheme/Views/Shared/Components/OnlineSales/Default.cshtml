@model IList<OnlineSalesPublicInfoModel>

@if (Model.Count > 0)
{
    <div class="online-sales">
        <div class="container">
            <h2 class="sec-title text-black text-center">@T("home.InfoSales.Title")</h2>
            <div class="sec-desc">
                <div class="row">
                    @foreach (var item in Model)
                    {
                        <div class="col-sm-6 col-md-3 col-lg-3">
                            <div class="sales">
                                <div class="info-sales">
                                    <div class="icons">
                                        <img alt="" class="sales-icon" src="@item.PictureUrl">
                                    </div>
                                    <h5 class="title text-black font-semibold">@item.Title</h5>
                                </div>
                                <div class="content-sales">
                                    <div class="desc">
                                        @Html.Raw(item.Description)
                                    </div>
                                </div>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
}