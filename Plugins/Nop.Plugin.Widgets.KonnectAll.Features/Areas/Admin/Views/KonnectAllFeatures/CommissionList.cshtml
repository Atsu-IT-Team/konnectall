@model CommissionSearchModel
@inject IWorkContext workContext
@inject IGenericAttributeService genericAttributeService

@{
    Layout = "_AdminLayout";
    //page title
    ViewBag.PageTitle = T("Plugin.Widgets.KonnectAll.Features.Commission").Text;
    //active menu item (system name)
    NopHtml.SetActiveMenuItemSystemName("Commission");

    const string hideSearchBlockAttributeName = "CommissionPage.HideSearchBlock";
    var hideSearchBlock = await genericAttributeService.GetAttributeAsync<bool>(await workContext.GetCurrentCustomerAsync(), hideSearchBlockAttributeName);

    var IsLoggedInAsVendor = await workContext.GetCurrentVendorAsync() != null;
}

<div class="content-header clearfix">
    <h1 class="float-left">
        @T("Plugin.Widgets.KonnectAll.Features.Commission")
    </h1>
</div>

<section class="content">
    <div class="container-fluid">
        <div class="form-horizontal">
            <div class="cards-group">
                @if (!IsLoggedInAsVendor)
                {
                    <div class="card card-default card-search">
                        <div class="card-body">
                            <div class="row search-row @(!hideSearchBlock ? "opened" : "")" data-hideAttribute="@hideSearchBlockAttributeName">
                                <div class="search-text">@T("Admin.Common.Search")</div>
                                <div class="icon-search"><i class="fas fa-search" aria-hidden="true"></i></div>
                                <div class="icon-collapse"><i class="far fa-angle-@(!hideSearchBlock ? "up" : "down")" aria-hidden="true"></i></div>
                            </div>

                            <div class="search-body @(hideSearchBlock ? "closed" : "")">
                                <div class="row">
                                    <div class="col-md-6">
                                        <div class="form-group row">
                                            <div class="col-md-4">
                                                <nop-label asp-for="SelectedVendorId" />
                                            </div>
                                            <div class="col-md-8">
                                                <nop-select asp-for="SelectedVendorId" asp-items="Model.AvailableVendors" />
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div class="form-group row">
                                    <div class="text-center col-12">
                                        <button type="button" id="search-commission" class="btn btn-primary btn-search"><i class="fas fa-search"></i>@T("Admin.Common.Search")</button>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                }
                
                <div class="card card-default">
                    <div class="card-body">

                        @await Html.PartialAsync("Table", new DataTablesModel
                        {
                            Name = "commission-grid",
                            UrlRead = new DataUrl("CommissionList", "KonnectAllFeatures", null),
                            SearchButtonId = "search-commission",
                            Length = Model.PageSize,
                            LengthMenu = Model.AvailablePageSizes,
                            Filters = new List<FilterParameter>
                            {
                                new FilterParameter(nameof(Model.SelectedVendorId))
                            },
                            ColumnCollection = new List<ColumnProperty>
                            {
                                new ColumnProperty(nameof(CommissionModel.OrderId))
                                {
                                    Title = T("Plugin.Widgets.KonnectAll.Features.Commission.List.Fields.OrderId").Text,
                                    Width = "50",
                                    Render = new RenderLink(new DataUrl("~/Admin/Order/Edit", nameof(CommissionModel.OrderId)))
                                },
                                new ColumnProperty(nameof(CommissionModel.VendorName))
                                {
                                    Title = T("Plugin.Widgets.KonnectAll.Features.Commission.List.Fields.VendorName").Text,
                                    Width = "200"
                                },
                                new ColumnProperty(nameof(CommissionModel.OrderTotalInclTax))
                                {
                                    Title = T("Plugin.Widgets.KonnectAll.Features.Commission.List.Fields.OrderTotalInclTax").Text,
                                    Width = "100"
                                },
                                new ColumnProperty(nameof(CommissionModel.OrderTotalExclTax))
                                {
                                    Title = T("Plugin.Widgets.KonnectAll.Features.Commission.List.Fields.OrderTotalExclTax").Text,
                                    Width = "100"
                                },
                                new ColumnProperty(nameof(CommissionModel.CommissionRate))
                                {
                                    Title = T("Plugin.Widgets.KonnectAll.Features.Commission.List.Fields.CommissionRate").Text,
                                    Width = "100"
                                },
                                new ColumnProperty(nameof(CommissionModel.CommissionAmount))
                                {
                                    Title = T("Plugin.Widgets.KonnectAll.Features.Commission.List.Fields.CommissionAmount").Text,
                                    Width = "100"
                                }
                            }
                        })
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>