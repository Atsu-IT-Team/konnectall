@model ApplicationRequestSearchModel
@inject IWorkContext workContext
@inject IGenericAttributeService genericAttributeService

@{
    Layout = "_AdminLayout";
    //page title
    ViewBag.PageTitle = T("Plugin.Widgets.KonnectAll.Features.ApplicationRequest").Text;
    //active menu item (system name)
    NopHtml.SetActiveMenuItemSystemName("ApplicationRequest");

    const string hideSearchBlockAttributeName = "ApplicationRequestPage.HideSearchBlock";
    var hideSearchBlock = await genericAttributeService.GetAttributeAsync<bool>(await workContext.GetCurrentCustomerAsync(), hideSearchBlockAttributeName);
}

<div class="content-header clearfix">
    <h1 class="float-left">
        @T("Plugin.Widgets.KonnectAll.Features.ApplicationRequest")
    </h1>
</div>

<section class="content">
    <div class="container-fluid">
        <div class="form-horizontal">
            <div class="cards-group">
                <div class="card card-default card-search">
                    <div class="card-body">
                        <div class="row search-row @(!hideSearchBlock ? "opened" : "")" data-hideAttribute="@hideSearchBlockAttributeName">
                            <div class="search-text">@T("Admin.Common.Search")</div>
                            <div class="icon-search"><i class="fas fa-search" aria-hidden="true"></i></div>
                            <div class="icon-collapse"><i class="far fa-angle-@(!hideSearchBlock ? "up" : "down")" aria-hidden="true"></i></div>
                        </div>

                        <div class="search-body @(hideSearchBlock ? "closed" : "")">
                            <div class="row">
                                <div class="col-md-6">
                                    <div class="form-group row">
                                        <div class="col-md-4">
                                            <nop-label asp-for="SearchFirstName" />
                                        </div>
                                        <div class="col-md-8">
                                            <nop-editor asp-for="SearchFirstName" />
                                        </div>
                                    </div>
                                    <div class="form-group row">
                                        <div class="col-md-4">
                                            <nop-label asp-for="SearchLastName" />
                                        </div>
                                        <div class="col-md-8">
                                            <nop-editor asp-for="SearchLastName" />
                                        </div>
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="form-group row">
                                        <div class="col-md-4">
                                            <nop-label asp-for="SearchEmail" />
                                        </div>
                                        <div class="col-md-8">
                                            <nop-editor asp-for="SearchEmail" />
                                        </div>
                                    </div>
                                    <div class="form-group row">
                                        <div class="col-md-4">
                                            <nop-label asp-for="SearchPhone" />
                                        </div>
                                        <div class="col-md-8">
                                            <nop-editor asp-for="SearchPhone" />
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="form-group row">
                                <div class="text-center col-12">
                                    <button type="button" id="search-apprequest" class="btn btn-primary btn-search"><i class="fas fa-search"></i>@T("Admin.Common.Search")</button>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="card card-default">
                    <div class="card-body">

                        @await Html.PartialAsync("Table", new DataTablesModel
                        {
                            Name = "application-grid",
                            UrlRead = new DataUrl("ApplicationList", "KonnectAllFeatures", null),
                            UrlDelete = new DataUrl("ApplicationDelete", "KonnectAllFeatures", null),
                            SearchButtonId = "search-apprequest",
                            Length = Model.PageSize,
                            LengthMenu = Model.AvailablePageSizes,
                            Filters = new List<FilterParameter>
                            {
                                new FilterParameter(nameof(Model.SearchFirstName)),
                                new FilterParameter(nameof(Model.SearchLastName)),
                                new FilterParameter(nameof(Model.SearchEmail)),
                                new FilterParameter(nameof(Model.SearchPhone))
                            },
                            ColumnCollection = new List<ColumnProperty>
                            {
                                new ColumnProperty(nameof(ApplicationRequestModel.FullName))
                                {
                                    Title = T("Plugin.Widgets.KonnectAll.Features.ApplicationRequest.List.Fields.FullName").Text,
                                    Width = "200"
                                },
                                new ColumnProperty(nameof(ApplicationRequestModel.Email))
                                {
                                    Title = T("Plugin.Widgets.KonnectAll.Features.ApplicationRequest.List.Fields.Email").Text,
                                    Width = "300"
                                },
                                new ColumnProperty(nameof(ApplicationRequestModel.Phone))
                                {
                                    Title = T("Plugin.Widgets.KonnectAll.Features.ApplicationRequest.List.Fields.Phone").Text,
                                    Width = "200"
                                },
                                new ColumnProperty(nameof(ApplicationRequestModel.Id))
                                {
                                    Title = T("Admin.Common.View").Text,
                                    Width = "50",
                                    ClassName = NopColumnClassDefaults.Button,
                                    Render = new RenderButtonView(new DataUrl("ApplicationDetail"))
                                },
                                new ColumnProperty(nameof(ApplicationRequestModel.Id))
                                {
                                    Title = T("Admin.Common.Delete").Text,
                                    ClassName = NopColumnClassDefaults.CenterAll,
                                    Render = new RenderButtonRemove(T("Admin.Common.Delete").Text),
                                    Width = "50"
                                }
                            }
                        })
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>